---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Join the prestigious International Conference on Processing of Minerals, Metals, and Materials in Kolkata, organized by Kazi Nazrul University Metallurgy Engineering Department. Explore the latest advancements in metallurgy engineering, minerals processing, and materials technology. Connect with experts, present your research, and network with professionals worldwide.'
    />
    <meta
      name='keywords'
      content='minerals processing, metals and materials, metallurgy engineering, global conference, Kolkata event, research presentations, networking, materials technology, scientific advancements, industry professionals'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='sitemap' href='/sitemap-index.xml' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='font-serif scroll-smooth'>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

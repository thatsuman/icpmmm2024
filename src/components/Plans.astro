---
type TPlans = { name: string; usd: string; inr: string };
const plans = [
  {
    name: 'Academics',
    usr: '450',
    inr: '8000',
  },
  {
    name: 'Industry and R&D Lab',
    usr: '600',
    inr: '9000',
  },
  {
    name: 'Students',
    usr: '300',
    inr: '4000',
  },
  {
    name: 'Accompany / Spouse',
    usr: '300',
    inr: '4000',
  },
];
---

<section class='text-gray-600 overflow-hidden'>
  <div class='container px-5 py-24 mx-auto'>
    <div class='flex flex-col text-center w-full mb-20'>
      <h1 class='sm:text-4xl text-3xl font-medium font-sans mb-2 text-gray-900'>
        Registation Fees
      </h1>
      <p class='lg:w-2/3 mx-auto leading-relaxed text-base text-gray-500'>
        Grab your seats now.
      </p>
    </div>
    <div class='flex flex-wrap -m-4'>
      {
        plans.map((plan) => (
          <div class='p-4 xl:w-1/4 md:w-1/2 w-full'>
            <div class='h-full p-6 rounded-lg border-2 border-gray-300 flex flex-col relative overflow-hidden'>
              <h2 class='text tracking-widest font-sans mb-1 font-medium'>
                {plan.name}
              </h2>
              <h1 class='text-3xl text-gray-900 pb-4 mb-4 border-b border-gray-200 leading-none'>
                {plan.inr} INR
              </h1>
              <button class='flex items-center mt-auto text-white bg-gray-400 border-0 py-2 px-4 w-full focus:outline-none hover:bg-gray-500 rounded'>
                Button
                <div class='i-iconoir-arrow-right w-4 h-4 ml-auto' />
              </button>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
